# Frontend Account Configuration
# RENAME this file to terraform.tfvars and fill in your values

# ============================================
# AWS Configuration
# ============================================
aws_region          = "ap-southeast-1"
aws_profile         = "frontend-account"
network_aws_profile = "network-account"

# ============================================
# Project Settings
# ============================================
project_name = "zerotrust-lab"
environment  = "learning"

# ============================================
# Account IDs
# ============================================
# Network Account ID
networking_account = "999999999999"

# ============================================
# ACM Certificate
# ============================================
# Certificate ARN for HTTPS (must be in same region)
certificate_arn = "arn:aws:acm:ap-southeast-1:111111111111:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# ============================================
# Application Domain
# ============================================
frontend_domain_name = "app.zerotrust.local"

# ============================================
# Identity Center Configuration
# ============================================
# IAM Identity Center Group ID for Verified Access
idc_group_id = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# ============================================
# Backend Service Domains
# ============================================
backend_service1_domain_name = "mservice1.zerotrust.internal"
backend_service2_domain_name = "mservice2.zerotrust.internal"

# ============================================
# IAM Role ARN
# ============================================
# Leave empty for first apply, then update with output value
frontend_application_role_arn = ""

# ============================================
# ECS Configuration (Tier 0 - Optimized for Lab)
# ============================================
ecs_task_cpu = "256"
ecs_task_memory = "512"
ecs_desired_count = 1
ecs_min_capacity  = 1
ecs_max_capacity  = 2
